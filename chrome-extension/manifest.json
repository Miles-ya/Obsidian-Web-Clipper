{
    "manifest_version": 3,
    "name": "Obsidian Web Clipper",
    "version": "1.0",
    "description": "Saves full page and highlights to Obsidian.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://127.0.0.1/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": "icon.png"
    },
    "icons": {
        "128": "icon.png"
    }
}